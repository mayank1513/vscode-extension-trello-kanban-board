  "keywords": [
    "project-management",
    "productivity",
    "agile",
    "scrum",
    "sprint",
    "drag-and-drop",
    "Global Scope",
    "Workspace Scope",
    "markdown",
    "markdown-supported",
    "trello",
    "kanban",
    "board",
    "project",
    "management",
    "todo-list",
    "mayank1513"
  ]
}
