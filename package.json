{
  "name": "trello-kanban-task-board",
  "private": true,
  "version": "0.8.2",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "build:all": "npm run build && npm run build:extension",
    "test": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 3000",
    "start": "npm run preview",
    "build:extension": "tsc -p tsconfig.extension.json && node createPackageJSON.js",
    "deploy": "npm run build:all && cd dist && vsce publish"
  },
  "dependencies": {
    "@m2d/react-markdown": "1.0.0",
    "@mayank1513/fork-me": "^2.1.3",
    "lucide-react": "^0.553.0",
    "nanoid": "^5.1.6",
    "nextjs-themes": "^4.0.6",
    "react": "^19.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-color-palette": "^7.3.1",
    "react-dom": "^19.2.0",
    "react-markdown-autolink": "^0.0.2",
    "react-toastify": "^11.0.5",
    "react-webgl-trails": "^0.0.5",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "webgl-generative-particles": "^0.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "jsdom": "^27.2.0",
    "octokit": "^5.0.5",
    "sass": "^1.94.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.8"
